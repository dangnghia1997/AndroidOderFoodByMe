<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLoaiThucUong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dangn.oderfoodbyme.LoaiThucUongActivity">


    <TextView
        android:visibility="invisible"
        android:id="@+id/textviewchuamaban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView

        android:id="@+id/textViewLoaiThucUong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loại Thức Uống"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewTheHienBan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bàn số"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ListView

        android:id="@+id/ListViewLoaiThucUong"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
